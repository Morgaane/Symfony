{% extends 'base.html.twig' %}

{% block title %}Matières{% endblock %}

{% block body %}
    <h1>Récapitulatif de la matière</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Matière</th>
                <td>{{ matiere.NomMatiere }}</td>
            </tr>
            <tr>
                <th>Intervenant</th>
                <td>{{ matiere.NomIntervenant}}</td>
            </tr>
            <tr>
                <th>Total heures</th>
                <td>{{ matiere.TotalHeures ? matiere.TotalHeures: 0 }}</td>
            </tr>
            <tr>
                <th>Heures restantes</th>
                <td>{{ matiere.HeuresRestantes ? matiere.HeuresRestantes: matiere.TotalHeures }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('matieres_index') }}">Retour</a>

    <a href="{{ path('matieres_edit', {'id': matiere.id}) }}">Modifier</a>

    {{ include('matiere/_delete_form.html.twig') }}
{% endblock %}
