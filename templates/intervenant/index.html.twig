{% extends 'base.html.twig' %}

{% block title %}Hello IntervenantController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" id="calendar-tab" href="/calendar">Liste des intervenants</a>
    </li>

</ul>
<div class="card">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="calendar-tab">
        <div class="card-body">
            <table class="table">
                <thead>
                <tr>
                    <th>Matière</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Identifiant</th>
                    <th>total des heures</th>
                    <th>heure restant</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.prenom }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.Totalheure }}</td>
                        <td>{{ user.Totalrestantes }}</td>
                        <td>



                            <a href="{{ path('intervenant_show', {'id': user.id}) }}">
                                <button type="button" class="btn btn-primary">Récapitulatif</button>
                            </a>
                            {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('intervenant_edit', {'id': user.id}) }}">
                                <button type="button" class="btn btn-primary">Editer</button>
                            </a>
                            {% endif %}
                            {% endif %}


                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
